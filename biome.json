{
    "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "cmd/gui/frontend/**",
            "!cmd/gui/frontend/**/*.html",
            "!cmd/gui/frontend/bindings",
            "!cmd/gui/frontend/dist",
            "!cmd/gui/frontend/wailsjs"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": {
                "useAltText": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noUnusedImports": "warn",
                "useUniqueElementIds": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            },
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            ["react", "react/**"],
                            ["@mui/material"],
                            ["@mui/icons-material"],
                            ":PACKAGE:",
                            {
                                "type": true
                            },
                            ":PATH:",
                            ":SIDE_EFFECT:"
                        ]
                    }
                }
            }
        }
    }
}
