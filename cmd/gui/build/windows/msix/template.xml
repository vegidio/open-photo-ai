<?xml version="1.0" encoding="utf-8"?>
<MsixPackagingToolTemplate
    xmlns="http://schemas.microsoft.com/msix/packaging/msixpackagingtool/template/2022">
    <Settings
        AllowTelemetry="false"
        ApplyACLsToPackageFiles="true"
        GenerateCommandLineFile="true"
        AllowPromptForPassword="false">
    </Settings>
    <Installer
        Path="opai"
        Arguments=""
        InstallLocation="C:\Program Files\Ascentiun AB\Open Photo AI">
    </Installer>
    <PackageInformation
        PackageName="Open Photo AI"
        PackageDisplayName="Open Photo AI"
        PublisherName="CN=Ascentiun AB"
        PublisherDisplayName="Ascentiun AB"
        Version="0.1.0.0"
        PackageDescription="An open source photo AI editor">
        <Capabilities>
            <Capability Name="runFullTrust" />

        </Capabilities>
        <Applications>
            <Application
                Id="io.vinicius.opai"
                Description="An open source photo AI editor"
                DisplayName="Open Photo AI"
                ExecutableName="opai"
                EntryPoint="Windows.FullTrustApplication">

            </Application>
        </Applications>
        <Resources>
            <Resource Language="en-us" />
        </Resources>
        <Dependencies>
            <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />
        </Dependencies>
        <Properties>
            <Framework>false</Framework>
            <DisplayName>Open Photo AI</DisplayName>
            <PublisherDisplayName>Ascentiun AB</PublisherDisplayName>
            <Description>An open source photo AI editor</Description>
            <Logo>Assets\AppIcon.png</Logo>
        </Properties>
    </PackageInformation>
    <SaveLocation PackagePath="opai.msix" />
    <PackageIntegrity>
        <CertificatePath></CertificatePath>
    </PackageIntegrity>
</MsixPackagingToolTemplate>
